<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<!--        第一行状态栏-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constaintLayoutModeChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/imageViewModeChoose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/outline_books_movies_and_music_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/imageViewModeChoose"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="模式选择"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_search_24"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageViewMusicPicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:src="@drawable/flower"
        app:layout_constraintTop_toBottomOf="@id/constaintLayoutModeChoose"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

<!--    歌词栏-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constaintLayoutLyric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewMusicPicture">

        <TextView
            android:id="@+id/textViewLyricFirstLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="qwe dfestasd do fim de semsda"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/textViewLyricSecondLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewLyricFirstLine"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="qwe dfestasd do fim de semsda"
            android:textColor="#898989"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    歌曲信息栏-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constaintLayoutSongMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/constaintLayoutLyric">

        <LinearLayout
            android:id="@+id/linerLayoutSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent">

            <com.example.mymusic.view.AutoScrollTextView
                android:id="@+id/textViewSongTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="歌曲名xxxxx"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30sp"
                android:scrollHorizontally="true" />

            <TextView
                android:id="@+id/textViewSongQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="极高"
                android:textColor="#FBF5F5"
                android:textSize="25sp"
                android:layout_toLeftOf="@id/textViewSongTitle"
                android:textStyle="normal"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textViewSongSinger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linerLayoutSong"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="歌手"
            android:textColor="#FBF5F5"
            android:textSize="25sp"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>